{% extends "base.njk" %} {% block title %}Create new account{% endblock %}

{% block body %}

<span id="error" style="color:red"></span>

<div class="ui form segment">
  <p>Tell us about yourself</p>
  <div class="field">
    <label>Name</label>
    <input placeholder="Name" id="name" type="text">
  </div>
  <div class="field">
    <label>Username</label>
    <input placeholder="Email" id="email" type="text"/>
  </div>
  <div class="field">
    <label>Password</label>
    <input placeholder="Password" type="password" id="password"/>
  </div>
  <div class="field">
    <input placeholder="Reenter your password" type="password" id="checkPassword">
  </div>
  <div class="inline field">
    <button onclick="register()" type="button"> Create account </button>
  </div>
</div>

{% endblock %}

{% block scripts %}
{{ super() }} 

<script type="text/javascript" src="/static/js/account.js"></script>

{% endblock %}
