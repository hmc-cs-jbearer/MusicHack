{% extends "base.njk" %}

{% block title %}Juke!{% endblock %}

{% block body %}

<span id="error" style="color:red">{{ error }}</span>

<div class="ui form segment">
  <p>Welcome to Juke!</p>
  <form>
    <div class="field">
      <label>Email</label>
      <input placeholder="Email" id="email" type="text">
    </div>
    <div class="field">
      <label>Password</label>
      <input placeholder="Password" type="password" id="password">
    </div>
    <div class="inline field">
      <button onclick="login('{{ continue }}')" type="button">Sign in</button>
    </div>
  </form>

  <form action="/public/register">
    <button type="submit"> Create new account </button>
  </form>

  <form action="/public/reset-password">
    <button type="submit"> Forgot Password? </button>
  </form>
</div>

{% endblock %}

{% block scripts %}
{{ super() }}

<script type="text/javascript" src="/static/js/account.js"></script>

{% endblock %}